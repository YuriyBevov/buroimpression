      .main-nav__wrapper
        .main-nav__header
          button.main-nav__back-btn Назад
          button.nav-closer
            svg(width="24" height="24")
              use(xlink:href="./assets/sprite.svg#icon-close")
        ul.main-nav__list
          each item in navList
            li.main-nav__list-item(class = item.innerList ? 'has-inner' : null)
              a(href= item.url class= item.cls ? item.cls : null)= item.title
                if item.innerList
                  svg(width="12" height="10")
                    use(xlink:href="./assets/sprite.svg#icon-menu-arrow")
              if item.innerList
                ul.main-nav__inner-list
                  li.main-nav__inner-list-item.main-nav__list-item--all
                    a(href="#") Перейти в раздел
                  each inner in item.innerList
