mixin main-btn(data)
  if data.type === 'button' || data.type === 'submit'
    button(type= data.type class= data.cls ? data.cls : null).main-btn.main-btn--button= data.text
  if data.type === 'link'
    a(href= data.url class= data.cls ? data.cls : null).main-btn= data.text

  if data.type === 'anchor'
    a(href= `#${data.anchor}` data-scroll-to= data.anchor class= data.cls ? data.cls : null).main-btn.anchor-link= data.text
